// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AdminData {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  name      String
  createdAt DateTime @default(now())
  createdBy String
  updateAt  DateTime @updatedAt
  updateBy  String
}

model UserData {
  id             Int              @id @default(autoincrement())
  username       String
  password       String
  firstName      String
  lastName       String
  email          String           @unique
  emailVerified  Boolean          @default(false)
  tel            String?
  image          String?
  createdAt      DateTime         @default(now())
  createdBy      String
  updateAt       DateTime         @updatedAt
  updateBy       String
  LinkListData   LinkListData[]
  PaymentData    PaymentData[]
  PayHistoryData PayHistoryData[]
}

model LinkListData {
  id           Int      @id @default(autoincrement())
  title        String
  origUrl      String
  shortUrl     String
  pathShortUrl String
  click        Int      @default(0)
  userId       Int
  createdAt    DateTime @default(now())
  createdBy    String
  updateAt     DateTime @updatedAt
  updateBy     String

  user UserData @relation(fields: [userId], references: [id])
}

model PackageData {
  id             Int              @id @default(autoincrement())
  name           String
  price          Float
  setlink        String?
  createdAt      DateTime         @default(now())
  createdBy      String
  updateAt       DateTime         @updatedAt
  updateBy       String
  PaymentData    PaymentData[]
  PayHistoryData PayHistoryData[]
}

model PaymentData {
  id           Int      @id @default(autoincrement())
  packageId    Int
  userId       Int
  purchaseDate DateTime
  buyDay       DateTime
  payDay       DateTime
  createdAt    DateTime @default(now())
  createdBy    String
  updateAt     DateTime @updatedAt
  updateBy     String

  package PackageData @relation(fields: [packageId], references: [id])
  user    UserData    @relation(fields: [userId], references: [id])
}

model PayHistoryData {
  id        Int      @id @default(autoincrement())
  userId    Int
  packageId Int
  payDay    DateTime
  createdAt DateTime @default(now())
  createdBy String
  updateAt  DateTime @updatedAt
  updateBy  String

  user    UserData    @relation(fields: [userId], references: [id])
  package PackageData @relation(fields: [packageId], references: [id])
}
